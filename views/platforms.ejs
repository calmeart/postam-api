<%- include('partials/header') %>

<div class="centerBox">
  <h1>This is platforms page</h1>
  <form class="text-center" action="/thecreator/platforms" method="post">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="platformName" id="floatingPlatformName" placeholder="Enter Your Script">
      <label for="floatingPlatformName">Enter Your Script</label>
    </div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="redirectAddress" id="floatingRedirect" placeholder="Enter Your Script">
      <label for="floatingRedirect">Enter Your Script</label>
    </div>
    <button class="btn btn-primary" type="submit" name="createPlatform"> Submit </button>
  </form>

  <div class="container">
    <div class="d-flex">
      <% messagesArray.forEach(item => { %>
        <div class="card m-3" style="width: 18rem;">
        <div class="card-header">
          <%= item.platformName %>
        </div>
        <ul class="list-group list-group-flush">
          <% item.platformMessages.forEach(item => { %>
            <li class="list-group-item"><%= item.subject %> || <%= item.senderName %></li>
          <% }) %>
        </ul>
      </div>
      <% }) %>
    </div>
  </div>
</div>





<%- include('partials/footer') %>
